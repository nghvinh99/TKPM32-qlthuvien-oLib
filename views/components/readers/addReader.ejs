<!DOCTYPE html>
<html>
<%- include('../../elements/head.ejs', {title: title}) %>

<body>
  <div class="page">
    <%- include('../../navigator/sidebar.ejs') %>
    <%- include('../../navigator/navbar.ejs') %>
    <%- include('../../elements/breadcrumb.ejs'); %>
    <section class="forms">
      <div class="container-fluid">
        <!-- Page Header-->
        <header>
          <%- include('../../elements/header.ejs') %>
        </header>
        <div class="row">
          <div class="col-lg-4">
            <div class="card card-profile">
              <div style="background-image: url(img/photos/paul-morris-116514-unsplash.jpg);" class="card-header"></div>
              <div class="card-body text-center">
                <img src="/img/user.png" class="card-profile-img" 
                onclick="document.getElementById('avatarImg').click();" 
                style="cursor: pointer;" data-toggle="tooltip" title="Đổi ảnh đại diện">
                <h3 class="mb-3">Tên</h3>
                <p class="mb-4">Role</p>
              </div>
            </div>
          </div>
          <div class="col-lg-8">
            <form class="card" id="readerInfo">
              <div class="card-body">
                <h3 class="card-title">Chi tiết</h3>
                <div class="row">
                  <input type="file" id="avatarImg" style="display: none;"></input>
                  <div class="col-md-6">
                    <div class="form-group mb-6">
                      <label class="form-label">Họ tên</label>
                      <input type="text" placeholder="Họ tên" class="form-control" id="name" required>
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6">
                    <div class="form-group mb-4">
                      <label class="form-label">Email</label>
                      <input type="email" placeholder="Email" class="form-control" id="email" required>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group mb-6">
                      <label class="form-label">Mật khẩu</label>
                      <input type="password" placeholder="Mật khẩu" class="form-control" id="password" required>
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6">
                    <div class="form-group mb-4">
                      <label class="form-label">Xác nhận mật khẩu</label>
                      <input type="password" placeholder="Xác nhận mật khẩu" class="form-control" id="pwdConfirm" required>
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6">
                    <div class="form-group mb-4">
                      <label class="form-label">Loại độc giả</label>
                      <select class="form-control" id="readerType" required>
                        <option selected hidden value="" >Chọn loại độc giả</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6">
                    <div class="form-group mb-4">
                      <label class="form-label">Số điện thoại</label>
                      <input type="text" placeholder="Số điện thoại" class="form-control" id="phone">
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6">
                    <div class="form-group mb-6">
                      <label class="form-label">Ngày sinh</label>
                      <input type="date" placeholder="dd-mm-yyyy" value="" class="form-control" id="DoB">
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-6">
                    <div class="form-group mb-6">
                      <label class="form-label">Mã học sinh</label>
                      <input type="text" placeholder="Mã học sinh" class="form-control" id="studentID">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group mb-6">
                      <label class="form-label">Ngày lập thẻ</label>
                      <input id="createdAt" class="form-control" disabled>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group mb-6">
                      <label class="form-label">Hạn thẻ</label>
                      <input id="expiredAt" class="form-control" disabled>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group mb-4">
                      <label class="form-label">Địa chỉ</label>
                      <input type="text" placeholder="Địa chỉ" id="address" class="form-control" >
                    </div>
                  </div>
                  <div class="col-md-12" style="text-align: right;">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <%- include('../../elements/footer.ejs'); %>
  </div>
  <%- include('../../elements/scripts.ejs'); %>
  <%- include('../../elements/dataScripts.ejs'); %>
  <script src="/javascripts/reader-add.js"></script>
  <script src="/javascripts/reader-render.js"></script>
</body>

</html>